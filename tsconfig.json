{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"]
  },
  "include": [
    "index.ts",
    "nodes/**/*",
    "utils/**/*"
  ],
  "exclude": ["node_modules/**/*", "**/*.spec.ts"]
}
